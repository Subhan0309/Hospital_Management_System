<div class="d-flex flex-row justify-content-between align-items-center mb-3 mt-5 border p-3">
 <h3 class="text-primary mb-0 fs-4 fs-md-6">
    <i class="bi bi-chat text-primary me-2"></i> Comments
  </h3>
</div>

<% if @comments.any? %>
  <div class="table-responsive mt-5">
    <table class="table table-striped table-responsive overflow-auto">
      <thead>
        <tr>
          <th>#</th>
          <th>Comment</th>
          <th>Created By</th>
          <th>Associated With</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each_with_index do |comment, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= comment.description %></td>
            <td><%= comment.created_by.name %>  (<%= comment.created_by.role %>)</td>
            <td>
              <% if comment.associated_with_type == 'MedicalRecord' %>
                <%= link_to 'Medical Record', user_medical_record_path(comment.associated_with.patient_id, comment.associated_with), class: 'btn btn-outline-primary btn-sm' %>
              <% else %>
                <%= comment.associated_with_type %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="position-absolute bottom-0">
      <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning mt-4" role="alert">
    No comments found.
  </div>
<% end %>
