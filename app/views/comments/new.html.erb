<div class="container">
  <h1>Add Comment</h1>
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with(model: [@user,@medical_record, @comment], url: user_medical_record_comments_path(current_user,@medical_record), local: true) do |form| %>
        <div class="form-group">
          <%= form.label :description, "Comment" %>
          <%= form.text_area :description, class: 'form-control', rows: 3 %>
        </div>
        <%= form.hidden_field :created_by_id, value: current_user.id %>
        <%= form.hidden_field :associated_with_type, value: 'MedicalRecord' %>
        <%= form.hidden_field :associated_with_id, value: @medical_record.id %>
        <%= form.submit 'Add Comment', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
