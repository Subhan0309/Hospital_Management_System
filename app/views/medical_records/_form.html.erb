<div class="container">
  <h1 class="text-center mb-4 text-primary">
    <%= t('medical_records.create_title') %>
  </h1>

  <%= form_with(model: [@patient, @medical_record], url: user_medical_records_path(@patient), local: true) do |form| %>
    <% if @medical_record.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@medical_record.errors.count, t('errors.error')) %> <%= t('errors.prohibited') %>:</h2>
        <ul>
          <% @medical_record.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

   <div class="card mb-4 shadow-sm rounded-lg border-0">
  <div class="card-body bg-light">
    <h5 class="card-title text-primary font-weight-bold">
      <i class="bi bi-info-circle-fill"></i> <%= t('medical_records.patient_info') %>
    </h5>
    <div class="row mt-4">
      <div class="col-md-6">
        <label class="font-weight-semibold text-muted"><%= t('medical_records.patient_name') %></label>
        <p class="form-control-plaintext border rounded p-2 bg-white shadow-sm"><%= @patient.name %></p>
      </div>
      <div class="col-md-6">
        <label class="font-weight-semibold text-muted"><%= t('medical_records.patient_email') %></label>
        <p class="form-control-plaintext border rounded p-2 bg-white shadow-sm"><%= @patient.email %></p>
      </div>
    </div>
  </div>
</div>


   <div class="form-row">
      <div class="form-group col-md-12">
        <%= form.label :details, t('medical_records.details') %>
        <%= form.text_area :details, class: "form-control", rows: 4 %>
      </div>
    </div>

    <div class="form-group mt-5">
      <%= form.label :attachments, t('medical_records.attachments') %>
      <%= form.file_field :attachments, multiple: true, class: "form-control" %>
    </div>

    <%= form.hidden_field :date, value: Time.now %>

    <%= form.submit t('medical_records.create_button'), class: "btn btn-primary mt-4" %>
  <% end %>
</div>
