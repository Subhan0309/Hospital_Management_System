<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Medical Records</h1>
<%if current_user.role == 'doctor'%>
    <%= link_to 'Create Medical Record', new_user_medical_record_path(@patient), class: 'btn btn-primary' %>
 <%end%>
      </div>
  <% if @medical_records.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Patient</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% @medical_records.each do |record| %>
          <tr>
            <td><%= record.date.strftime('%B %d, %Y') %></td>
            <td><%= Patient.find(record.patient_id).name %></td>
            <td><%= record.details %></td>
            <td>
              <%= link_to 'Show', user_medical_record_path(@patient, record), class: 'btn btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No medical records found for this Patient.</p>
  <% end %>
</div>
