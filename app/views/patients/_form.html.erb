<div class="container my-5">
  <div class="row justify-content-center">
 
      <h2 class="text-primary mb-4">
        <%= @patient.new_record? ? 'Create New Patient' : 'Edit Patient' %>
      </h2>
      
      <%= form_with(model: @patient, local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: @patient %>
        
        <div class="mb-3 ">
          <%= f.label :name, 'Name *', class: 'fw-bold' %>
          <div class="input-group mt-2">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            <%= f.text_field :name, class: 'form-control', autofocus: true, required: true, minlength: 3, maxlength: 20 %>
          </div>
        </div>
        
        <% if @patient.new_record? %>
          <div class="mb-3 ">
            <%= f.label :email, 'Email *', class: 'fw-bold' %>
            <div class="input-group mt-2">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <%= f.email_field :email, class: 'form-control', autocomplete: 'email', required: true %>
            </div>
          </div>
        
          <div class="mb-3 ">
            <%= f.label :password, 'Password *', class: 'fw-bold' %>
            <div class="input-group mt-2">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password', required: true %>
            </div>
            <% if @minimum_password_length %>
              <em class="text-muted mt-2"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          
          <div class="mb-3 ">
            <%= f.label :password_confirmation, 'Confirm Password *', class: 'fw-bold' %>
            <div class="input-group mt-2">
              <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password', required: true %>
            </div>
          </div>
        <% end %>
        
        <div class="mb-3 ">
          <%= f.label :gender, 'Gender *', class: 'fw-bold' %>
          <div class="input-group mt-2">
            <span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
            <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']]), {}, class: 'form-control', required: true %>
          </div>
        </div>
        
        <%= f.fields_for :detail do |detail_form| %>
          <div class="mb-3 ">
            <%= detail_form.label :disease, 'Disease', class: 'fw-bold' %>
            <div class="input-group mt-2">
              <span class="input-group-text"><i class="bi bi-file-earmark-text"></i></span>
              <%= detail_form.text_field :disease, class: 'form-control' %>
            </div>
          </div>

          <% unless @patient.new_record? %>
            <div class="mb-3 ">
              <%= detail_form.label :status, 'Status', class: 'fw-bold' %>
              <div class="input-group mt-2">
                <span class="input-group-text"><i class="bi bi-check-circle"></i></span>
                <%= detail_form.select :status, options_for_select([['Alive', 'alive'], ['Disease', 'disease'], ['Dead', 'dead']]), {}, class: 'form-control' %>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="text-end mt-4">
          <%= f.submit @patient.new_record? ? 'Create Patient' : 'Update Patient', class: 'btn btn-primary' %>
        </div>
      <% end %>

  </div>
</div>
