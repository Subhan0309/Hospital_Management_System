<%= render layout: "layouts/users" do %> 
   


<!-- app/views/search/index.html.erb -->
<div class="container mt-4">
  <% if @user_results.present? %>
    <div class="row">
      <% @user_results.each do |user| %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= user.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= user.role %></h6>
              <p class="card-text"><%= user.email %></p>
              <!-- Add any additional user info or actions here -->
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination links -->
    <div class="d-flex justify-content-between align-items-center mt-4">
      <%= will_paginate @user_results, params: { query: params[:query] }, class: 'pagination' %>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      No results found for "<%= @query %>". Please try a different search.
    </div>
  <% end %>
</div>

<% end %>