
<%= render layout: "layouts/users" do %> 
      
<!-- Flex container for header and button -->
<div class="d-flex flex-row justify-content-between align-items-center mb-3">
  <!-- Heading -->
  <h1 class="text-primary mb-0">Admin and Staff</h1>
  
  <!-- Button to create a new user -->
  <%= link_to 'Add New User', new_user_path, class: 'btn btn-primary' %>
</div>

<!-- Users table -->
<% if @users.any? %>
  <div class="table-responsive mt-5">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role.capitalize %></td>
            <td>
            <!-- Edit Button with Icon -->
                <%= link_to edit_user_path(user), class: 'btn btn-success btn-sm' do %>
                  <i class="bi bi-pencil-square"></i> 
                <% end %>

                <!-- Delete Button with Icon -->
                <%= button_to user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                  <i class="bi bi-trash"></i> 
                <% end %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    No users found.
  </div>
<% end %>


<% end %>
