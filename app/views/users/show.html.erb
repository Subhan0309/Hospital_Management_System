<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header bg-secondary d-flex justify-content-between align-items-center">
      <h5 class="text-light">User Profile</h5>
    </div>
    
    <div class="card-body">
      <!-- Profile Picture Display -->
      <div class="text-center mb-3">
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.profile_picture, class: 'rounded-circle shadow', size: '150x150' %>
        <% else %>
          <%= image_tag 'default-profile.jpeg', class: 'rounded-circle shadow', size: '150x150' %>
        <% end %>
      </div>

      <!-- Display User Information -->
      <div class="form-group mb-3">
        <label class="form-label text-primary">Name</label>
        <p class="form-control-plaintext"><%= @user.name %></p>
      </div>

      <div class="form-group mb-3">
        <label class="form-label text-primary">Email</label>
        <p class="form-control-plaintext"><%= @user.email %></p>
      </div>

      <div class="form-group mb-3">
        <label class="form-label text-primary">Role</label>
        <p class="form-control-plaintext"><%= @user.role.capitalize %></p>
      </div>

      <div class="form-group mb-3">
        <label class="form-label text-primary">Gender</label>
        <p class="form-control-plaintext"><%= @user.gender.capitalize %></p>
      </div>
    </div>
  </div>
</div>
